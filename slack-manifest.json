{
  "display_information": {
    "name": "OpenClaw",
    "description": "Multi-persona AI assistant (Patton, Buffett, OpenClaw)",
    "background_color": "#000000"
  },
  "features": {
    "bot_user": {
      "display_name": "OpenClaw",
      "always_online": true
    },
    "slash_commands": [
      {
        "command": "/openclaw",
        "url": "https://your-endpoint.com/slack/command",
        "description": "Talk to OpenClaw AI",
        "usage_hint": "your message"
      },
      {
        "command": "/patton",
        "url": "https://your-endpoint.com/slack/command",
        "description": "Talk to Patton (strategy)",
        "usage_hint": "strategic question"
      },
      {
        "command": "/buffett",
        "url": "https://your-endpoint.com/slack/command",
        "description": "Talk to Buffett (finance/value)",
        "usage_hint": "financial question"
      }
    ],
    "eventSubscriptions": {
      "request_url": "https://your-endpoint.com/slack/events",
      "events": [
        "message.channels",
        "message.groups",
        "message.im",
        "message.mpim",
        "reaction_added",
        "reaction_removed",
        "app_mention",
        "message.app_home"
      ]
    },
    "sockets": true,
    "outgoing_webhooks": true
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "channels:read",
        "channels:write",
        "channels:manage",
        "channels:history",
        "chat:write",
        "chat:write.public",
        "chat:write.customize",
        "groups:read",
        "groups:write",
        "groups:write:invites",
        "groups:history",
        "im:read",
        "im:write",
        "im:history",
        "mpim:read",
        "mpim:write",
        "mpim:history",
        "reactions:read",
        "reactions:write",
        "users:read",
        "users:read.email",
        "users.profile:read",
        "team:read",
        "apps.connections:write",
        "apps.event_api"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "request_url": "https://your-endpoint.com/slack/events"
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": true,
    "token_rotation_enabled": false
  }
}
